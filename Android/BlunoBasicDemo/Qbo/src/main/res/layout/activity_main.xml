
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_material_dark"
    tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/cycleborder2"
        custom:JV_buttonImage="@drawable/core"
        android:layout_marginLeft="1dp"
        android:layout_centerVertical="true"

        custom:JV_fixedCenter="true" />

    <Button
        android:id="@+id/bluetooth"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/bluetooth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cyclebutton"
        android:layout_below="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cyclebutton"
        android:layout_above="@+id/button4"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/cyclebutton"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/cyclebutton"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"

        android:layout_toStartOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/bluetooth"
        android:background="@drawable/linebutton" />

    <Button
        android:id="@+id/button6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/linebutton"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button5" />

    <ImageView
        android:id="@+id/touchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
